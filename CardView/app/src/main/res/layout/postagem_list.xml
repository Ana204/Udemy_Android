<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="7dp"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ana Gomes"
                android:textSize="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/dataDaPublicacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agora mesmo"
                android:textSize="18sp"
                />

            <ImageView
                android:id="@+id/imgPostagem"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/mario"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:id="@+id/textPostagem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bonecos legais !!"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonCurtir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gostei"
                android:drawableStart="@drawable/ic_favorite"
                style="?attr/buttonBarButtonStyle"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonComentar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/comentar"
                android:drawableStart="@drawable/ic_chat_bubble"
                style="?attr/buttonBarButtonStyle"
                />

        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
